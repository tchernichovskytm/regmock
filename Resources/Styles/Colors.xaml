<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Note: For Android please see also Platforms\Android\Resources\values\colors.xml  -->

    <Color x:Key="Primary">#00CC00</Color>
    <Color x:Key="Secondary">#00AACC</Color>
    <Color x:Key="Tertiary">#00CCAA</Color>

    <Color x:Key="PrimaryDark">#008000</Color>
    <Color x:Key="SecondaryDark">#006A80</Color>
    <Color x:Key="TertiaryDark">#00806A</Color>

    <Color x:Key="PrimaryHalfDark">#00A600</Color>
    <Color x:Key="SecondaryHalfDark">#008AA6</Color>
    <Color x:Key="TertiaryHalfDark">#00A68A</Color>

    <Color x:Key="PrimaryActive">#30CC30</Color>
    <Color x:Key="SecondaryActive">#30AACC</Color>
    <Color x:Key="TertiaryActive">#30CCAA</Color>

    <Color x:Key="PrimaryDarkActive">#308030</Color>
    <Color x:Key="SecondaryDarkActive">#306A80</Color>
    <Color x:Key="TertiaryDarkActive">#30806A</Color>

    <Color x:Key="PrimaryText">#101010</Color>
    <Color x:Key="SecondaryText">#404040</Color>
    <Color x:Key="TertiaryText">#707070</Color>

    <Color x:Key="PrimaryDarkText">#F0F0F0</Color>
    <Color x:Key="SecondaryDarkText">#C0C0C0</Color>
    <Color x:Key="TertiaryDarkText">#909090</Color>

