<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="regmock.Views.Testing"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Comps="clr-namespace:regmock.Components"
    Title="Testing">

    <VerticalStackLayout>
        <Border HorizontalOptions="Fill" Style="{StaticResource RoundedBorder}">
            <Comps:ToggleButton IsToggled="{Binding BindingContext.MyBool, Source={RelativeSource AncestorType={x:Type ContentPage}}}" />
        </Border>
        <Button Text="Hello" TextColor="{StaticResource PrimaryDarkText}" />
    </VerticalStackLayout>
</ContentPage>