<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="regmock.Views.PickFavoritesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helper="clr-namespace:regmock.Helper"
    Title="PickFavoritesPage">
    <Grid Style="{StaticResource MainGridStyle}">

        <VerticalStackLayout Grid.Row="1" Style="{StaticResource MainStack}">

            <CollectionView ItemsSource="{Binding HelperFavorites}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="5" Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Padding="6"
                            BackgroundColor="WhiteSmoke"
                            ColumnDefinitions="*,*">
                            <VerticalStackLayout
                                Grid.Column="0"
                                Margin="5,2,0,2"
                                HorizontalOptions="Start"
                                VerticalOptions="Center">
                                <HorizontalStackLayout>
                                    <Label FontSize="20" Text="{Binding Subject.Name}" />
                                </HorizontalStackLayout>
                                <HorizontalStackLayout>
                                    <Label Text="Classes:" />
                                    <CollectionView HeightRequest="20" ItemsSource="{Binding Grades}">

                                        <CollectionView.ItemsLayout>
                                            <LinearItemsLayout Orientation="Horizontal" />
                                        </CollectionView.ItemsLayout>

                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <HorizontalStackLayout Padding="5,0,0,0">
                                                    <Label FontAttributes="Bold" Text="{Binding Name}" />
                                                </HorizontalStackLayout>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>

                                    </CollectionView>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            <VerticalStackLayout
                                Grid.Column="1"
                                HorizontalOptions="End"
                                VerticalOptions="Center">
                                <Button
                                    Background="Transparent"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditFavoriteCmd}"
                                    CommandParameter="{Binding .}"
                                    FontFamily="MaterialIcons"
                                    FontSize="28"
                                    Text="{x:Static helper:IconFont.Edit}"
                                    TextColor="Black" />
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>

        <Button
            Grid.Row="2"
            BackgroundColor="Transparent"
            Command="{Binding AddFavoriteCmd}"
            FontSize="Header"
            Text="New Preference"
            TextColor="Blue" />

    </Grid>
</ContentPage>