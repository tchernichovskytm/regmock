<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="regmock.Views.PickFavoritesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helper="clr-namespace:regmock.Helper"
    Background="{StaticResource BackgroundGradient}">

    <Grid Style="{StaticResource MainGridStyle}">

        <ScrollView Grid.Row="1" Margin="0,0,0,4">

            <VerticalStackLayout Style="{StaticResource MainStack}">

                <CollectionView ItemsSource="{Binding HelperFavorites}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="5" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.EmptyView>
                        <ContentView>
                            <Border
                                HorizontalOptions="Center"
                                Stroke="{StaticResource GrayGradient}"
                                Style="{StaticResource RoundedBorder}">
                                <Label
                                    Padding="8"
                                    Background="{StaticResource BackgroundGradient}"
                                    FontSize="28"
                                    HorizontalOptions="Center"
                                    Text="No favorites yet" />
                            </Border>
                        </ContentView>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="{StaticResource PrimaryGradient}" Style="{StaticResource RoundedBorder}">
                                <Grid
                                    Padding="6"
                                    Background="{StaticResource ElementGradient}"
                                    ColumnDefinitions="*,*">
                                    <VerticalStackLayout
                                        Grid.Column="0"
                                        Margin="5,2,0,2"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center">
                                        <HorizontalStackLayout>
                                            <Label FontSize="20" Text="{Binding Subject.Name}" />
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout>
                                            <Label Text="Classes:" />
                                            <CollectionView HeightRequest="20" ItemsSource="{Binding Grades}">

                                                <CollectionView.ItemsLayout>
                                                    <LinearItemsLayout Orientation="Horizontal" />
                                                </CollectionView.ItemsLayout>

                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate>
                                                        <HorizontalStackLayout Padding="5,0,0,0">
                                                            <Label FontAttributes="Bold" Text="{Binding Name}" />
                                                        </HorizontalStackLayout>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>

                                            </CollectionView>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                    <Border
                                        Grid.Column="1"
                                        HorizontalOptions="End"
                                        Stroke="{StaticResource HelpingGradient}"
                                        Style="{StaticResource RoundedBorder}"
                                        VerticalOptions="Center">
                                        <Button
                                            Padding="0"
                                            Background="{StaticResource ElementGradient}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditFavoriteCmd}"
                                            CommandParameter="{Binding .}"
                                            FontFamily="MaterialIcons"
                                            FontSize="28"
                                            Text="{x:Static helper:IconFont.Edit}"
                                            TextColor="{StaticResource HelpingHalfDark}" />
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>

        </ScrollView>

        <Border
            Grid.Row="2"
            HorizontalOptions="Center"
            Stroke="{StaticResource SecondaryGradient}"
            Style="{StaticResource RoundedBorder}">
            <Button
                Grid.Row="2"
                Padding="8"
                Background="{StaticResource ElementGradient}"
                Command="{Binding AddFavoriteCmd}"
                FontSize="40"
                Text="New Favorite"
                TextColor="{StaticResource SecondaryHalfDark}" />
        </Border>
    </Grid>
</ContentPage>