<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="regmock.Views.PickFavoritesPage"
             Title="PickFavoritesPage">
    <Grid Style="{StaticResource MainGridStyle}">

        <VerticalStackLayout Grid.Row="1" Style="{StaticResource MainStack}">

            <CollectionView ItemsSource="{Binding HelperFavorites}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout HorizontalOptions="Start" Padding="6" BackgroundColor="WhiteSmoke">
                            <HorizontalStackLayout>
                                <Label FontSize="20" Text="{Binding Subject.Name}" />
                            </HorizontalStackLayout>
                            <HorizontalStackLayout>
                                <Label Text="Classes:" />
                                <CollectionView HeightRequest="20" ItemsSource="{Binding Grades}">

                                    <CollectionView.ItemsLayout>
                                        <LinearItemsLayout Orientation="Horizontal"/>
                                    </CollectionView.ItemsLayout>

                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <HorizontalStackLayout Padding="5,0,0,0">
                                                <Label FontAttributes="Bold" Text="{Binding Name}"/>
                                            </HorizontalStackLayout>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>

                                </CollectionView>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>

        <Button Grid.Row="2"
            Text="New Preference"
            TextColor="Blue"
            BackgroundColor="Transparent"
            FontSize="Header"
            Command="{Binding AddPreferenceCmd}"/>

    </Grid>
</ContentPage>