<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helper="clr-namespace:regmock.Helper"
             x:Class="regmock.Views.PickFavoritesPage"
             Title="PickFavoritesPage">
    <Grid Style="{StaticResource MainGridStyle}">

        <VerticalStackLayout Grid.Row="1" Style="{StaticResource MainStack}">

            <CollectionView ItemsSource="{Binding HelperFavorites}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,*" Padding="6" BackgroundColor="WhiteSmoke">
                            <VerticalStackLayout Margin="5,2,0,2" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Start">
                                <HorizontalStackLayout>
                                    <Label FontSize="20" Text="{Binding Subject.Name}" />
                                </HorizontalStackLayout>
                                <HorizontalStackLayout>
                                    <Label Text="Classes:" />
                                    <CollectionView HeightRequest="20" ItemsSource="{Binding Grades}">

                                        <CollectionView.ItemsLayout>
                                            <LinearItemsLayout Orientation="Horizontal"/>
                                        </CollectionView.ItemsLayout>

                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <HorizontalStackLayout Padding="5,0,0,0">
                                                    <Label FontAttributes="Bold" Text="{Binding Name}"/>
                                                </HorizontalStackLayout>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>

                                    </CollectionView>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" HorizontalOptions="End">
                                <Button
                                    TextColor="Black"
                                    FontFamily="MaterialIcons"
                                    Text="{x:Static helper:IconFont.Edit}" 
                                    FontSize="28"
                                    Background="Transparent"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditFavoriteCmd}"
                                    CommandParameter="{Binding .}" />
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>

        <Button Grid.Row="2"
            Text="New Preference"
            TextColor="Blue"
            BackgroundColor="Transparent"
            FontSize="Header"
            Command="{Binding AddFavoriteCmd}"/>

    </Grid>
</ContentPage>