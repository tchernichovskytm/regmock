<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="regmock.Views.RolePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="RolePage">
    <Grid Style="{StaticResource MainGridStyle}">
        <Label
            Grid.Row="0"
            Style="{StaticResource TitleLabel}"
            Text="Who Are You?" />

        <Grid
            Grid.Row="1"
            Margin="24"
            RowDefinitions="*,*,*"
            RowSpacing="50">
            <Frame
                Grid.Row="0"
                Padding="0"
                BackgroundColor="LightGray"
                BorderColor="Transparent"
                CornerRadius="25">
                <Grid Padding="12" RowDefinitions="Auto,*">

                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding StudentClick_Cmd}" />
                    </Grid.GestureRecognizers>
                    <Label
                        Grid.Row="0"
                        FontSize="24"
                        HorizontalOptions="Center"
                        Text="Student" />
                    <Image Grid.Row="1" Source="student.png" />
                </Grid>
            </Frame>

            <Frame
                Grid.Row="1"
                Padding="0"
                BackgroundColor="LightGreen"
                BorderColor="Transparent"
                CornerRadius="25">
                <Grid Padding="12" RowDefinitions="Auto,*">
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding TeacherClick_Cmd}" />
                    </Grid.GestureRecognizers>
                    <Label
                        Grid.Row="0"
                        FontSize="24"
                        HorizontalOptions="Center"
                        Text="Teacher" />
                    <Image Grid.Row="1" Source="teacher.png" />
                </Grid>
            </Frame>

            <Frame
                Grid.Row="2"
                Padding="0"
                BackgroundColor="SandyBrown"
                BorderColor="Transparent"
                CornerRadius="25">
                <Grid Padding="12" RowDefinitions="Auto,*">
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding PrincipalClick_Cmd}" />
                    </Grid.GestureRecognizers>
                    <Label
                        Grid.Row="0"
                        FontSize="24"
                        HorizontalOptions="Center"
                        Text="Principal" />
                    <Image Grid.Row="1" Source="principal.png" />
                </Grid>
            </Frame>
        </Grid>

    </Grid>
</ContentPage>