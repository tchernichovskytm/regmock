<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="regmock.Views.RolePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="RolePage">
    <Grid Style="{StaticResource MainGridStyle}">
        <Label
                Grid.Row="0"
                Style="{StaticResource TitleLabel}"
                Text="Who Are You" />

        <Grid Grid.Row="1" RowDefinitions="*,*,*" RowSpacing="50" Margin="24">
            <Grid Grid.Row="0" RowDefinitions="Auto,*">
                <Button Grid.RowSpan="2" Command="{Binding StudentClick_Cmd}"/>
                <Label Grid.Row="0" FontSize="24" Text="Student" HorizontalOptions="Center"/>
                <Image Grid.Row="1" Source="student.png" />
            </Grid>
            
            <Grid Grid.Row="1" RowDefinitions="Auto,*">
                <Button Grid.RowSpan="2" Command="{Binding TeacherClick_Cmd}"/>
                <Label Grid.Row="0" FontSize="24" Text="Teacher" HorizontalOptions="Center"/>
                <Image Grid.Row="1" Source="teacher.png" />
            </Grid>
            
            <Grid Grid.Row="2" RowDefinitions="Auto,*">
                <Button Grid.RowSpan="2" Command="{Binding PrincipalClick_Cmd}"/>
                <Label Grid.Row="0" FontSize="24" Text="Principal" HorizontalOptions="Center"/>
                <Image Grid.Row="1" Source="principal.png" />
            </Grid>
        </Grid>

    </Grid>
</ContentPage>