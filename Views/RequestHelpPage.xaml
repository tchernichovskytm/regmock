<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="regmock.Views.RequestHelpPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helper="clr-namespace:regmock.Helper"
    Background="{StaticResource BackgroundGradient}">

    <Grid Style="{StaticResource MainGridStyle}">
        <Border
            Grid.Row="0"
            HorizontalOptions="Start"
            Stroke="{StaticResource SecondaryGradient}"
            Style="{StaticResource RoundedBorder}">
            <Button
                Padding="8"
                Background="{StaticResource ElementGradient}"
                Command="{Binding EditTicketsCmd}"
                FontSize="22"
                Text="Edit"
                TextColor="{StaticResource SecondaryHalfDark}" />
        </Border>

        <!--  TODO: scroll bar should not touch the tickets  -->
        <ScrollView Grid.Row="1" Margin="0,4,0,4">

            <CollectionView ItemsSource="{Binding Tickets}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="5" Orientation="Vertical" />
                </CollectionView.ItemsLayout>

                <CollectionView.EmptyView>
                    <ContentView>
                        <Border
                            HorizontalOptions="Center"
                            Stroke="{StaticResource GrayGradient}"
                            Style="{StaticResource RoundedBorder}">
                            <Label
                                Padding="8"
                                Background="{StaticResource BackgroundGradient}"
                                FontSize="28"
                                HorizontalOptions="Center"
                                Text="No tickets yet" />
                        </Border>
                    </ContentView>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="{StaticResource PrimaryGradient}" Style="{StaticResource RoundedBorder}">
                            <Grid
                                Padding="8"
                                Background="{StaticResource ElementGradient}"
                                ColumnDefinitions="*,*">
                                <VerticalStackLayout Grid.Column="0" HorizontalOptions="Start">
                                    <Label FontSize="24" Text="{Binding Subject.Name}" />
                                    <Label FontSize="14" Text="{Binding Topics[0]}" />
                                </VerticalStackLayout>
                                <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End">
                                    <Label
                                        Margin="0,0,6,0"
                                        FontSize="18"
                                        Text="{Binding ServerActiveTime}"
                                        VerticalOptions="Center" />
                                    <Border Stroke="{StaticResource HelpingGradient}" Style="{StaticResource RoundedBorder}">
                                        <Switch Margin="0" IsToggled="{Binding IsActive}" />
                                    </Border>
                                    <Border Stroke="{StaticResource CriticalGradient}" Style="{StaticResource RoundedBorder}">
                                        <Button
                                            Background="{StaticResource ElementGradient}"
                                            Command="{Binding DeleteCmd}"
                                            CommandParameter="{Binding .}"
                                            FontFamily="MaterialIcons"
                                            FontSize="32"
                                            HorizontalOptions="End"
                                            IsVisible="{Binding BindingContext.IsEditing, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                            Text="{x:Static helper:IconFont.Delete}"
                                            TextColor="{StaticResource CriticalHalfDark}" />
                                    </Border>
                                </HorizontalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </ScrollView>

        <Border
            Grid.Row="2"
            HorizontalOptions="Center"
            Stroke="{StaticResource SecondaryGradient}"
            Style="{StaticResource RoundedBorder}">
            <Button
                Padding="8"
                Background="{StaticResource ElementGradient}"
                Command="{Binding AddTicketCmd}"
                FontSize="40"
                Text="New Ticket"
                TextColor="{StaticResource SecondaryHalfDark}" />
        </Border>

    </Grid>
</ContentPage>