<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="regmock.Views.EditPreferencePage"
             xmlns:helper="clr-namespace:regmock.Helper"
             Title="EditPreferencePage">
    <VerticalStackLayout Margin="18">
        <Grid RowDefinitions="*,*,*">
            <Button
            Grid.Row="0"
            HorizontalOptions="End"
            FontFamily="MaterialIcons"
            FontSize="46"
            Text="{x:Static helper:IconFont.Close}"
            WidthRequest="64"
            HeightRequest="64"
            TextColor="Black"
            BackgroundColor="Transparent"
            Command="{Binding CloseCmd}" />

            <VerticalStackLayout Grid.Row="1" Style="{StaticResource MainStack}">
                <VerticalStackLayout>
                    <Label Text="Select a subject" />
                    <Picker ItemsSource="{Binding Subjects}" ItemDisplayBinding="{Binding Name}" SelectedIndex="{Binding SelectedSubjectIndex}">
                        <Picker.Items>

                        </Picker.Items>
                    </Picker>
                </VerticalStackLayout>

                <CollectionView ItemsSource="{Binding ToggleGrades}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <HorizontalStackLayout>
                                <CheckBox VerticalOptions="Center" IsChecked="{Binding Toggled}"/>

                                <Label VerticalOptions="Center" Text="{Binding Grade.Name}"/>
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
            
            <VerticalStackLayout Margin="15" Spacing="64" Grid.Row="2">
                <Button
                    IsEnabled="{Binding CanApply}"
                    Command="{Binding ApplyCmd}"
                    HorizontalOptions="Center"
                    Text="Apply"
                    WidthRequest="175"
                    Style="{StaticResource AddButton}"/>
                <Button
                    Command="{Binding DeleteCmd}"
                    HorizontalOptions="Center"
                    Text="Delete"
                    WidthRequest="175"
                    Style="{StaticResource AddButton}"
                    BorderColor="Red"/>
            </VerticalStackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>