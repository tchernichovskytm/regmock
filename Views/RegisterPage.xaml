<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="regmock.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helper="clr-namespace:regmock.Helper"
    Background="{StaticResource BackgroundGradient}">

    <Grid Style="{StaticResource MainGridStyle}">
        <!--<Label Grid.Row="0" Text="Register" Style="{StaticResource TitleLabel}" />-->
        <!--  TODO: remove later  -->

        <ScrollView Grid.Row="1">

            <VerticalStackLayout Style="{StaticResource MainStack}">
                <VerticalStackLayout>
                    <Label Text="Full Name:" />
                    <Grid>
                        <Entry Text="{Binding FullnameEntry}" />

                        <Button
                            Padding="0"
                            Background="Transparent"
                            Command="{Binding FullnameReset_Cmd}"
                            FontFamily="MaterialIcons"
                            FontSize="20"
                            HorizontalOptions="End"
                            MaximumWidthRequest="64"
                            Text="{x:Static helper:IconFont.Close}"
                            TextColor="{StaticResource Critical}" />
                    </Grid>

                    <Label Text="{Binding FullnameErr}" TextColor="{StaticResource Critical}" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Phone Number:" />

                    <Grid>
                        <Entry Placeholder="+972" Text="{Binding PhonenumberEntry}" />

                        <Button
                            Padding="0"
                            Background="Transparent"
                            Command="{Binding PhoneReset_Cmd}"
                            FontFamily="MaterialIcons"
                            FontSize="20"
                            HorizontalOptions="End"
                            MaximumWidthRequest="64"
                            Text="{x:Static helper:IconFont.Close}"
                            TextColor="{StaticResource Critical}" />
                    </Grid>

                    <Label Text="{Binding PhonenumberErr}" TextColor="{StaticResource Critical}" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Email:" />
                    <Grid>
                        <Entry Text="{Binding EmailEntry}" />

                        <Button
                            Padding="0"
                            Background="Transparent"
                            Command="{Binding EmailReset_Cmd}"
                            FontFamily="MaterialIcons"
                            FontSize="20"
                            HorizontalOptions="End"
                            MaximumWidthRequest="64"
                            Text="{x:Static helper:IconFont.Close}"
                            TextColor="{StaticResource Critical}" />
                    </Grid>
                    <Label Text="{Binding EmailErr}" TextColor="{StaticResource Critical}" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Password:" />
                    <Grid ColumnDefinitions="*, Auto, Auto">
                        <Entry
                            Grid.ColumnSpan="3"
                            IsPassword="{Binding IsPassVisible}"
                            Text="{Binding PasswordEntry}" />

                        <Button
                            Grid.Column="1"
                            Padding="0"
                            Background="Transparent"
                            Command="{Binding ShowPass_Cmd}"
                            FontFamily="MaterialIcons"
                            FontSize="20"
                            HorizontalOptions="End"
                            MaximumWidthRequest="20"
                            Text="{x:Static helper:IconFont.Remove_red_eye}"
                            TextColor="{StaticResource Helping}" />
                        <Button
                            Grid.Column="2"
                            Padding="0"
                            Background="Transparent"
                            Command="{Binding PassReset_Cmd}"
                            FontFamily="MaterialIcons"
                            FontSize="20"
                            HorizontalOptions="End"
                            MaximumWidthRequest="64"
                            Text="{x:Static helper:IconFont.Close}"
                            TextColor="{StaticResource Critical}" />
                    </Grid>

                    <Label Text="{Binding PasswordErr}" TextColor="{StaticResource Critical}" />
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <VerticalStackLayout Grid.Row="2">
            <Label
                HorizontalOptions="Center"
                Text="{Binding RegisterErr}"
                TextColor="{StaticResource Critical}" />
            <Button
                Command="{Binding Register_Cmd}"
                IsEnabled="{Binding CanRegister}"
                Style="{StaticResource ConfirmButton}"
                Text="Register" />
        </VerticalStackLayout>
    </Grid>

</ContentPage>
