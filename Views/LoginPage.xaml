<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="regmock.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helper="clr-namespace:regmock.Helper"
    Background="{StaticResource BackgroundGradient}">

    <Grid Style="{StaticResource MainGridStyle}">
        <Label
            Grid.Row="0"
            Style="{StaticResource TitleLabel}"
            Text="Login" />

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Style="{StaticResource MainStack}">

                <VerticalStackLayout>
                    <Label Text="Email:" />
                    <Grid ColumnDefinitions="*,Auto">
                        <Entry Grid.ColumnSpan="2" Text="{Binding EmailEntry}" />

                        <Button
                            Grid.Column="1"
                            Padding="0"
                            Background="Transparent"
                            BorderColor="Transparent"
                            Command="{Binding EmailReset_Cmd}"
                            FontFamily="MaterialIcons"
                            FontSize="20"
                            HorizontalOptions="End"
                            MaximumWidthRequest="64"
                            Style="{StaticResource CriticalButton}"
                            Text="{x:Static helper:IconFont.Close}" />
                    </Grid>

                    <Label Style="{StaticResource CriticalText}" Text="{Binding EmailErr}" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Password:" />

                    <Grid ColumnDefinitions="*,Auto,Auto">
                        <Entry
                            Grid.ColumnSpan="3"
                            IsPassword="{Binding IsPassVisible}"
                            Text="{Binding PasswordEntry}" />

                        <Button
                            Grid.Column="1"
                            Padding="0"
                            Background="Transparent"
                            Command="{Binding ShowPass_Cmd}"
                            FontFamily="MaterialIcons"
                            FontSize="20"
                            HorizontalOptions="End"
                            MaximumWidthRequest="20"
                            Style="{StaticResource HelpingButton}"
                            Text="{x:Static helper:IconFont.Remove_red_eye}" />
                        <Button
                            Grid.Column="2"
                            Padding="0"
                            Background="Transparent"
                            Command="{Binding PassReset_Cmd}"
                            FontFamily="MaterialIcons"
                            FontSize="20"
                            HorizontalOptions="End"
                            MaximumWidthRequest="64"
                            Style="{StaticResource CriticalButton}"
                            Text="{x:Static helper:IconFont.Close}" />
                    </Grid>

                    <Label Style="{StaticResource CriticalText}" Text="{Binding PasswordErr}" />
                </VerticalStackLayout>

                <VerticalStackLayout />

            </VerticalStackLayout>
        </ScrollView>

        <VerticalStackLayout Grid.Row="2">
            <Label
                FontSize="18"
                HorizontalOptions="Center"
                Text="{Binding LoginErr}"
                TextColor="{Binding LoginErrColor}" />
            <Button
                Command="{Binding Login_Cmd}"
                IsEnabled="{Binding CanLogin}"
                Style="{StaticResource ConfirmButton}"
                Text="Login" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>