<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="regmock.Views.LoginPage"
             Title="LoginPage">
    <Grid Style="{StaticResource MainGridStyle}">
        <Label Grid.Row="0" Text="Login" Style="{StaticResource TitleLabel}" />

        <VerticalStackLayout Grid.Row="1" Style="{StaticResource MainStack}">

            <VerticalStackLayout>
                <Label Text="Username:" />
                <Grid>
                    <Entry Text="{Binding UsernameEntry}"/>

                    <Button
                        Command="{Binding UserReset_Cmd}"
                        HorizontalOptions="End" 
                        BackgroundColor="Transparent"
                        BorderColor="Transparent"
                        TextColor="Gray"
                        Text="x"
                        />
                </Grid>

                <Label Text="{Binding UsernameErr}" Style="{StaticResource errLabel}" />
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="Password:" />

                <Grid ColumnDefinitions="*, 30, 30">
                    <Entry Text="{Binding PasswordEntry}" IsPassword="{Binding IsPassVisible}" Grid.ColumnSpan="3"/>

                    <Button
                        Command="{Binding PassReset_Cmd}"
                        BackgroundColor="Transparent"
                        BorderColor="Transparent"
                        TextColor="Gray"
                        Text="x"
                        HorizontalOptions="Start" 
                        Grid.Column="1"
                    />
                    <Button
                        Command="{Binding ShowPass_Cmd}"
                        HorizontalOptions="End" 
                        BackgroundColor="Transparent"
                        BorderColor="Transparent"
                        Padding ="0,0,20,0"
                        Text="👁️"
                        Grid.Column="2"
                    />
                </Grid>

                <Label Text="{Binding PasswordErr}" Style="{StaticResource errLabel}" />
            </VerticalStackLayout>

        </VerticalStackLayout>

        <Button
            Grid.Row="2"
            Text="Login"
            Style="{StaticResource ConfirmButton}" />
    </Grid>
</ContentPage>