<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="regmock.Views.GiveHelpPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helper="clr-namespace:regmock.Helper"
    Background="{StaticResource BackgroundGradient}">

    <Grid
        Margin="18"
        RowDefinitions="Auto,*"
        RowSpacing="8">
        <Border
            Grid.Row="0"
            HorizontalOptions="End"
            IsVisible="{Binding IsFavButtonVisible}"
            Stroke="{StaticResource FavoriteGradient}"
            Style="{StaticResource RoundedBorder}">
            <Button
                Padding="0"
                Background="{StaticResource ElementGradient}"
                Command="{Binding FavButtonCmd}"
                FontFamily="MaterialIcons"
                FontSize="20"
                IsVisible="{Binding IsFavButtonVisible}"
                Text="{Binding FavButtonIcon}"
                TextColor="{StaticResource FavoriteHalfDark}" />
        </Border>

        <VerticalStackLayout Grid.Row="1" Style="{StaticResource MainStack}">
            <VerticalStackLayout>
                <CollectionView ItemsSource="{Binding DisplayTickets}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="5" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout>
                                <Border Stroke="{StaticResource PrimaryGradient}" Style="{StaticResource RoundedBorder}">
                                    <Grid
                                        Padding="6"
                                        Background="{StaticResource ElementGradient}"
                                        ColumnDefinitions="*,Auto"
                                        RowDefinitions="*,*">
                                        <HorizontalStackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="8,2,0,0"
                                            Spacing="8"
                                            VerticalOptions="Center">
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="Center"
                                                Text="{Binding Subject.Name}"
                                                VerticalOptions="Center" />
                                            <Label
                                                HorizontalOptions="Center"
                                                Text="{Binding Topics[0]}"
                                                TextColor="{AppThemeBinding Light={StaticResource TertiaryText},
                                                                            Dark={StaticResource TertiaryDarkText}}"
                                                VerticalOptions="Center" />
                                        </HorizontalStackLayout>

                                        <HorizontalStackLayout
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Padding="8,0,0,2"
                                            Spacing="8"
                                            VerticalOptions="Center">
                                            <Label
                                                HorizontalOptions="Center"
                                                Text="{Binding Sender.Fullname}"
                                                VerticalOptions="Center" />

                                            <Border
                                                Grid.Row="0"
                                                HorizontalOptions="End"
                                                IsVisible="{Binding IsFavButtonVisible}"
                                                Stroke="{StaticResource HelpingGradient}"
                                                Style="{StaticResource RoundedBorder}">
                                                <Button
                                                    Padding="0"
                                                    Background="{StaticResource ElementGradient}"
                                                    FontFamily="MaterialIcons"
                                                    FontSize="20"
                                                    HorizontalOptions="Center"
                                                    MinimumHeightRequest="28"
                                                    MinimumWidthRequest="28"
                                                    Text="{x:Static helper:IconFont.Messenger}"
                                                    TextColor="{StaticResource HelpingHalfDark}"
                                                    VerticalOptions="Center" />
                                            </Border>
                                        </HorizontalStackLayout>
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Padding="0,0,13,0"
                                            FontFamily="MaterialIcons"
                                            FontSize="20"
                                            HorizontalOptions="Center"
                                            Text="{Binding IsFavoriteIcon}"
                                            TextColor="{StaticResource FavoriteHalfDark}"
                                            VerticalOptions="Center" />
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Padding="0,0,13,0"
                                            FontSize="16"
                                            HorizontalOptions="Center"
                                            Text="{Binding Sender.Grade.Name}"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </Border>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>