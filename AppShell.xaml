<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="regmock.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Views="clr-namespace:regmock.Views"
    xmlns:helper="clr-namespace:regmock.Helper"
    Title="Mockflow Beta 2.0"
    Shell.FlyoutBehavior="Flyout">

    <!-- TODO: make this UI item more like a important button -->
    <MenuItem Command="{Binding DarkMode_Cmd}" >
        <MenuItem.IconImageSource>
            <FontImageSource 
                FontFamily="MaterialIcons"
                Glyph="{AppThemeBinding Light={x:Static helper:IconFont.Dark_mode}, Dark={x:Static helper:IconFont.Light_mode}}"
                Color="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"/>
        </MenuItem.IconImageSource>
    </MenuItem>

    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate Views:RegisterPage}"
        IsVisible="{Binding IsNotLoggedIn}"
        Route="RegisterPage">
        <ShellContent.Icon>
            <FontImageSource
                FontFamily="MaterialIcons"
                Glyph="{x:Static helper:IconFont.App_registration}"
                Color="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"/>
        </ShellContent.Icon>
    </ShellContent>
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate Views:LoginPage}"
        IsVisible="{Binding IsNotLoggedIn}"
        Route="LoginPage">
        <ShellContent.Icon>
            <FontImageSource
                FontFamily="MaterialIcons"
                Glyph="{x:Static helper:IconFont.Login}"
                Color="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
        </ShellContent.Icon>

    </ShellContent>

