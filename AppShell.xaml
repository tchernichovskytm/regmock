<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="regmock.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Views="clr-namespace:regmock.Views"
    xmlns:helper="clr-namespace:regmock.Helper"
    Title="Mockflow Beta 2.0"
    Shell.FlyoutBehavior="Flyout">

    <!--  TODO: make this UI item more like a important button  -->
    <MenuItem Command="{Binding DarkModeCmd}">
        <MenuItem.IconImageSource>
            <FontImageSource
                FontFamily="MaterialIcons"
                Glyph="{AppThemeBinding Light={x:Static helper:IconFont.Dark_mode},
                                        Dark={x:Static helper:IconFont.Light_mode}}"
                Color="{AppThemeBinding Light=#000000,
                                        Dark=#FFFFFF}" />
        </MenuItem.IconImageSource>
    </MenuItem>

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate Views:LoginPage}"
        IsVisible="{Binding IsNotLoggedIn}"
        Route="LoginPage">
        <ShellContent.Icon>
            <FontImageSource
                FontFamily="MaterialIcons"
                Glyph="{x:Static helper:IconFont.Login}"
                Color="{AppThemeBinding Light=#000000,
                                        Dark=#FFFFFF}" />
        </ShellContent.Icon>
    </ShellContent>

    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate Views:RegisterPage}"
        IsVisible="{Binding IsNotLoggedIn}"
        Route="RegisterPage">
        <ShellContent.Icon>
            <FontImageSource
                FontFamily="MaterialIcons"
                Glyph="{x:Static helper:IconFont.App_registration}"
                Color="{AppThemeBinding Light=#000000,
                                        Dark=#FFFFFF}" />
        </ShellContent.Icon>
    </ShellContent>

    <ShellContent
        Title="Give Help"
        ContentTemplate="{DataTemplate Views:GiveHelpPage}"
        IsVisible="{Binding IsLoggedIn}"
        Route="GiveHelpPage">
        <ShellContent.Icon>
            <FontImageSource
                FontFamily="CustomIcons"
                Glyph="{x:Static helper:CustomIconsFont.GiveHelp}"
                Color="{AppThemeBinding Light=#000000,
                                        Dark=#FFFFFF}" />
        </ShellContent.Icon>
    </ShellContent>
    <ShellContent
        Title="Request Help"
        ContentTemplate="{DataTemplate Views:RequestHelpPage}"
        IsVisible="{Binding IsLoggedIn}"
        Route="RequestHelpPage">
        <ShellContent.Icon>
            <FontImageSource
                FontFamily="CustomIcons"
                Glyph="{x:Static helper:CustomIconsFont.GetHelp}"
                Color="{AppThemeBinding Light=#000000,
                                        Dark=#FFFFFF}" />
        </ShellContent.Icon>
    </ShellContent>
    <ShellContent
        Title="Pick Favorites"
        ContentTemplate="{DataTemplate Views:PickFavoritesPage}"
        IsVisible="{Binding IsLoggedIn}"
        Route="PickFavoritesPage">
        <ShellContent.Icon>
            <FontImageSource
                FontFamily="MaterialIcons"
                Glyph="{x:Static helper:IconFont.Favorite}"
                Color="{AppThemeBinding Light=#000000,
                                        Dark=#FFFFFF}" />
        </ShellContent.Icon>
    </ShellContent>

    <!--  DE  -->

    <!--<ShellContent>
        <ShellContent.Icon>
            <FontImageSource
                FontFamily="CustomIcons"
                Glyph="{x:Static helper:CustomIconsFont.GiveHelp}"
                Color="{AppThemeBinding Light=#000000,
                                        Dark=#FFFFFF}" />
        </ShellContent.Icon>
    </ShellContent>-->

</Shell>
