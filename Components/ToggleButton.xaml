<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="regmock.Components.ToggleButton"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid MinimumHeightRequest="64" MinimumWidthRequest="64">
        <GraphicsView Drawable="{Binding MainCanvas}" />
        <Button Background="Transparent" Command="{Binding ToggleCmd}" />
    </Grid>
</ContentView>
